<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Alanya Admin Panel" %></title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "admin", :media => "all" %>

  </head>
  <body>
    <div class="wrap">
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container">
            <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <%= %>
            </a>
            <a class="brand" href="<%= admin_path %>"><%= image_tag 'logo.png', size: '92x40', class: 'logo' %></a>

            <div class="container nav-collapse">
              <ul class="nav">
                <li class="<%= 'active' if  params[:controller] =~ /admin\/propert/ %> dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Properties <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li class="<%= 'active' if current_page?(admin_properties_path) %>"><%= link_to "List", admin_properties_path %></li>
                    <li class="<%= 'active' if current_page?(admin_property_attributes_path) %>"><%= link_to "Attributes", admin_property_attributes_path %></li>
                    <li class="<%= 'active' if current_page?(admin_reservations_path) %>"><%= link_to "All Reservations", admin_reservations_path %></li>
                    <li class="<%= 'active' if current_page?(admin_hot_offers_properties_path) %>"><%= link_to "Горячие предложения", admin_hot_offers_properties_path %></li>
                    <li class="<%= 'active' if current_page?(admin_manager_people_path) %>"><%= link_to "Менеджеры", admin_manager_people_path %></li>
                  </ul>
                </li>

                <li class="<%= 'active' if params[:controller] == 'admin/cities' %> dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Cities <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li class="<%= 'active' if current_page?(admin_cities_path) %>"><%= link_to "Cities", admin_cities_path %></li>
                    <li class="<%= 'active' if current_page?(admin_hot_offers_cities_path) %>"><%= link_to "Горячие предложения", admin_hot_offers_cities_path %></li>
                  </ul>
                </li>


                <li class="<%= 'active' if params[:controller] == 'admin/services' %>"><%= link_to "Services", admin_services_path %></li>
                <li class="<%= 'active' if  params[:controller] =~ /admin\/turkey_news/ %> dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Turkey News <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li class="<%= 'active' if params[:controller] == 'admin/turkey_news' %>"><%= link_to "Turkey News", admin_turkey_news_index_path %></li>
                    <li class="<%= 'active' if current_page?(admin_turkey_news_sliders_path) %>"><%= link_to "Slider", admin_turkey_news_sliders_path %></li>
                    <li class="<%= 'active' if current_page?([:edit, :admin, TurkeyNews.get_seismic_map]) %>"><%= link_to "Seismic map", [:edit, :admin, TurkeyNews.get_seismic_map] %></li>
                    <% if TurkeyNews.get_cost_of_living %>
                      <li class="<%= 'active' if current_page?([:edit, :admin, TurkeyNews.get_cost_of_living]) %>"><%= link_to "Cost of living", [:edit, :admin, TurkeyNews.get_cost_of_living] %></li>
                    <% end %>
                    <li class="<%= 'active' if current_page?(admin_turkey_news_index_settings_path) %>"><%= link_to "Settings", admin_turkey_news_index_settings_path %></li>
                  </ul>
                </li>
                <li class="<%= 'active' if  params[:controller] =~ /admin\/about_pages/ %> dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">About Pages <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li class="<%= 'active' if params[:controller] == 'admin/about_pages' %>"><%= link_to "About Pages", admin_about_pages_path %></li>
                    <li class="<%= 'active' if current_page?(admin_about_pages_sliders_path) %>"><%= link_to "Slider", admin_about_pages_sliders_path %></li>
                  </ul>
                </li>
                <li class="<%= 'active' if  params[:controller] =~ /admin\/contacts/ %> dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Contacts <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li class="<%= 'active' if current_page?(admin_contact_people_path) %>"><%= link_to "Persons", admin_contact_people_path %></li>
                    <li class="<%= 'active' if current_page?(admin_teams_path) %>"><%= link_to "Team Member", admin_teams_path %></li>
                    <li class="<%= 'active' if current_page?(admin_contact_topics_path) %>"><%= link_to "Topics", admin_contact_topics_path %></li>
                    <li class="<%= 'active' if current_page?(admin_contacts_settings_path) %>"><%= link_to "Settings", admin_contacts_settings_path %></li>
                  </ul>
                </li>
                <li class="<%= 'active' if params[:controller] == 'admin/banners' %>"><%= link_to "Banners", admin_banners_path %></li>
                <li class="<%= 'active' if params[:controller] == 'admin/feedback' %>"><%= link_to "Отзывы", admin_feedbacks_path %></li>
                <li class="<%= 'active' if  params[:controller] =~ /admin\/settings/ %> dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Settings <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li class="<%= 'active' if current_page?(admin_main_sliders_path) %>"><%= link_to "Main Slider", admin_main_sliders_path %></li>
                    <li class="<%= 'active' if current_page?(admin_global_settings_path) %>"><%= link_to "Global", admin_global_settings_path %></li>
                    <li class="<%= 'active' if current_page?(admin_main_settings_path) %>"><%= link_to "Main", admin_main_settings_path %></li>
                    <li class="<%= 'active' if current_page?(admin_transfer_settings_path) %>"><%= link_to "Transfer", admin_transfer_settings_path %></li>
                    <li class="<%= 'active' if current_page?(admin_reservation_settings_path) %>"><%= link_to "Reservation", admin_reservation_settings_path %></li>
                    <li class="<%= 'active' if current_page?(admin_buy_settings_path) %>"><%= link_to "Buy Settings", admin_buy_settings_path %></li>
                    <li class="<%= 'active' if current_page?(admin_rent_settings_path) %>"><%= link_to "Rent Settings", admin_rent_settings_path %></li>
                    <li class="<%= 'active' if current_page?(admin_paywalls_path) %>"><%= link_to "Paywalls", admin_paywalls_path %></li>
                  </ul>
                </li>
                <li class="<%= 'active' if params[:controller] == 'admin/users' %>"><%= link_to "Users", admin_users_path %></li>
                <li><%= link_to('Logout', destroy_admin_session_path, :method => :delete) %></li>
              </ul>
            </div>
            <!--/.nav-collapse -->
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row">
          <div class="span12">
            <%= bootstrap_flash %>
            <%= yield %>
          </div>
          <div class="span12">

          </div>
          <!-- div class="span3">
          <div class="well sidebar-nav">
            <h3>Sidebar</h3>
            <ul class="nav nav-list">
              <li class="nav-header">Sidebar</li>
              <li><%= link_to "Link1", "/path1" %></li>
              <li><%= link_to "Link2", "/path2" %></li>
              <li><%= link_to "Link3", "/path3" %></li>
            </ul>
          </div><!--/.well -->
          </div --><!--/span-->
        </div>
        <!--/row-->

      </div>
      <!-- /container -->
    </div>

    <footer>
      <div class="container">
        <p class="muted credit">&copy; Alanya 2013</p>
      </div>
    </footer>

    <%= javascript_include_tag "admin" %>

  </body>
</html>
