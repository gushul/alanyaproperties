<%= simple_form_for @reservation, url: @reservation.new_record? ? collection_url : resource_url, :html => { :class => 'form-horizontal' } do |f| %>
  <%# f.input :oid %>
  <%= f.input :from, as: :string, input_html: { class: 'datepicker' } %>
  <%= f.input :to, as: :string, input_html: { class: 'datepicker' } %>
  <%= f.input :contact_name %>
  <%= f.input :contact_email %>
  <%= f.input :contact_phone %>
  <%# f.association :property %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                collection_url, :class => 'btn' %>
  </div>
<% end %>
