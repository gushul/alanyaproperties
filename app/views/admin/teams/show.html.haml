- model_class = ContactPerson
.page-header
  %h1= t '.title', :default => model_class.model_name.human
%dl.dl-horizontal
  - if @team.name?
    %dt
      %strong
        = model_class.human_attribute_name(:name)
        \:
    %dd= @team.name
  - if @team.phone?
    %dt
      %strong
        = model_class.human_attribute_name(:phone)
        \:
    %dd= @team.phone
  - if @team.skype?
    %dt
      %strong
        = model_class.human_attribute_name(:skype)
        \:
    %dd= @team.skype
  - if @team.language?
    %dt
      %strong
        = model_class.human_attribute_name(:language)
        \:
    %dd= @team.language
  - if @team.position?
    %dt
      %strong
        = model_class.human_attribute_name(:position)
        \:
    %dd= @team.position
  - if @team.email?
    %dt
      %strong
        = model_class.human_attribute_name(:email)
        \:
    %dd= @team.email
  %br
  - if @team.photo?
    %dt
      %strong
        = model_class.human_attribute_name(:photo)
        \:
    %dd= image_tag @team.photo
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), |
    admin_team_members_path, :class => 'btn'               |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")),         |
    edit_admin_team_member_path(@team), :class => 'btn' |
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                             |
    admin_team_member_path(@team),                                                                |
    :method => 'delete',                                                                                       |
    :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))}, |
    :class => 'btn btn-danger'
