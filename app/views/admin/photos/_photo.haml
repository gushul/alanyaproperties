%li.span4.handle{ id: photo.id }
  .thumbnail
    = link_to image_tag(photo.picture.thumb), [:edit, :admin, parent, photo]
    .caption
      %h3= photo.title
      = link_to t('.edit', :default => t("helpers.links.edit")), [:edit, :admin, parent, photo], :class => 'btn btn-mini'
      = link_to t('.destroy', :default => t("helpers.links.destroy")), [:admin, parent, photo], :method => :delete, :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))}, :class => 'btn btn-mini btn-danger'                                                                        |
      = content_tag(:span, "Video", style: 'float: right;') if photo.video?
