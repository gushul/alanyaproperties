<%= simple_form_for [:admin, @service], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="row form-inline form-horizontal">
    <%= f.input :name, input_html: {class: 'input-xxlarge'}, wrapper_html: {class: 'span8', style: 'width: 726px;'} %>
    <%= f.input :slug, input_html: {class: 'input-xlarge', style: 'width: 398px;'}, wrapper_html: {class: 'span4'}, label: false, placeholder: 'Slug' %>
  </div>
  <%= f.input :body, input_html: {class: 'redactor', style: "width: 975px; height: 50px;"} %>
  <%= f.input :is_main %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_services_path, :class => 'btn' %>
            </div>
<% end %>
