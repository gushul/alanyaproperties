<%= simple_form_for [:admin, @about_page], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :body, input_html: { class: 'redactor' } %>
  <%= f.input :url %>
  <%= f.input :default %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_about_pages_path, :class => 'btn' %>
  </div>
<% end %>
