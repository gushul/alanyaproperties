= simple_form_for [:admin, @paywall], html: { class: 'form-horizontal' } do |f|
  = f.input :name
  = f.input :title
  = f.input :content, input_html: { style: 'width: 100%; height: 300px;'}
  = f.input :seconds, hint: '(значение 0 секунд - непоказывать пейволл)'
  = f.input :show_on_leave
  .form-actions
    = f.button :submit, class: 'btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), admin_paywalls_path, class: 'btn'
