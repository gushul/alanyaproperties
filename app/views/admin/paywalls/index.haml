- model_class = Paywall
.page-header
  %h1= t '.title', default: model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:seconds)
      %th= model_class.human_attribute_name(:show_on_leave)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - collection.each do |r|
      %tr
        %td= r.name
        %td= r.seconds
        %td= r.show_on_leave
        %td
          = link_to t('.show', default: t("helpers.links.show")), admin_paywall_path(r), class: 'btn btn-mini'
          = link_to t('.edit', default: t("helpers.links.edit")), edit_admin_paywall_path(r), class: 'btn btn-mini'
          = link_to t('.destroy', default: t("helpers.links.destroy")), admin_paywall_path(r), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-mini btn-danger'

= link_to t('.new', default: t("helpers.links.new")), new_admin_paywall_path, class: 'btn btn-primary'
