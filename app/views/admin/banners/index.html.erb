<%- model_class = Banner -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped data-table">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <!-- th><%# model_class.human_attribute_name(:description) %></th -->
      <!-- th><%# model_class.human_attribute_name(:tip) %></th>
      <th><%# model_class.human_attribute_name(:link) %></th -->
      <th><%= model_class.human_attribute_name(:position) %></th>
      <th><%= model_class.human_attribute_name(:until) %></th>
      <th><%= model_class.human_attribute_name(:active) %></th>
      <!-- th><%# model_class.human_attribute_name(:picture) %></th -->
      <!-- th><%# model_class.human_attribute_name(:created_at) %></th -->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @banners.each do |banner| %>
      <tr>
        <td><%= link_to banner.id, resource_path(banner) %></td>
        <td><%= banner.name %></td>
        <!-- td><%# banner.description %></td -->
        <!-- td><%# banner.tip %></td -->
        <!-- td><%# banner.link %></td -->
        <td><%= banner.position %></td>
        <td><%= banner.until %></td>
        <td><%= banner.active %></td>
        <!-- td><%# banner.picture %></td -->
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_resource_path(banner), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      resource_path(banner),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_resource_path,
            :class => 'btn btn-primary' %>
