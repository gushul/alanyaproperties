- model_class = ContactPerson
.page-header
  %h1= t '.title', :default => model_class.model_name.human
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:name)
      \:
  %dd= @manager_person.name
  %dt
    %strong
      = model_class.human_attribute_name(:skype)
      \:
  %dd= @manager_person.skype
  %dt
    %strong
      = model_class.human_attribute_name(:location)
      \:
  %dd= @manager_person.location
  %dt
    %strong
      = model_class.human_attribute_name(:language)
      \:
  %dd= @manager_person.language
  %dt
    %strong
      = model_class.human_attribute_name(:position)
      \:
  %dd= @manager_person.position
  %dt
    %strong
      = model_class.human_attribute_name(:email)
      \:
  %dd= @manager_person.email
  %dt
    %strong
      = model_class.human_attribute_name(:photo)
      \:
  %dd= image_tag @manager_person.photo
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), |
    admin_manager_people_path, :class => 'btn'               |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")),         |
    edit_admin_manager_person_path(@manager_person), :class => 'btn' |
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                             |
    admin_manager_person_path(@manager_person),                                                                |
    :method => 'delete',                                                                                       |
    :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))}, |
    :class => 'btn btn-danger'
