- model_class = TurkeyNews
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped.data-table
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:teaser)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @admin_useful_news.each do |useful_news|
      %tr
        %td= link_to useful_news.id, admin_useful_news_path(useful_news)
        %td= useful_news.title
        %td= useful_news.teaser
        %td
          = link_to "Edit",           |
            edit_admin_useful_news_path(useful_news), :class => 'btn btn-mini'
          = link_to "DESTROY",                                             |
            admin_useful_news_path(useful_news),                                                                       |
            :method => :delete,                                                                                        |
            :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))}, |
            :class => 'btn btn-mini btn-danger'
= link_to "NEW", |
  new_admin_useful_news_path,                            |
  :class => 'btn btn-primary'                            |
