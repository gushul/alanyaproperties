<%- model_class = PropertyAttribute -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped sortable" id="attributes" data-sort-url="<%= sort_admin_property_attributes_path %>">
  <thead>
  <tr>
    <th></th>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:attribute_type) %></th>
    <th><%= model_class.human_attribute_name(:options) %></th>
    <th><%= model_class.human_attribute_name(:default) %></th>
    <th><%= t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @property_attributes.each do |property_attribute| %>
      <tr id="<%= dom_id(property_attribute) %>">
        <td style="text-align:center;"><i class="icon-move"></i></td>
        <td><%= link_to property_attribute.id, admin_property_attribute_path(property_attribute) %></td>
        <td><%= property_attribute.name %></td>
        <td><%= property_attribute.attribute_type %></td>
        <td><%= property_attribute.options %></td>
        <td><%= property_attribute.default %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_property_attribute_path(property_attribute), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_property_attribute_path(property_attribute),
                      :method => :delete,
                      :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_property_attribute_path,
            :class => 'btn btn-primary' %>

