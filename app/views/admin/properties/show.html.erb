<%- model_class = Property -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @property.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:article) %>:</strong></dt>
  <dd><%= @property.article %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @property.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:property_for) %>:</strong></dt>
  <dd><%= @property.property_for %></dd>
  <dt><strong><%= model_class.human_attribute_name(:property_type) %>:</strong></dt>
  <dd><%= @property.property_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:property_kind) %>:</strong></dt>
  <dd><%= @property.property_kind %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @property.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city_id) %>:</strong></dt>
  <dd><%= @property.city_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:photo) %>:</strong></dt>
  <dd><%= @property.photo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:geo) %>:</strong></dt>
  <dd><%= @property.geo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:property_attributes) %>:</strong></dt>
  <dd><%= @property.property_attributes %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_properties_path, :class => 'btn' %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_property_path(@property), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_property_path(@property),
              :method => 'delete',
              :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
              :class => 'btn btn-danger' %>
</div>
