<% @content_class = 'city_page' %>
<%= render 'shared/turkey_navbar' %>
<div class="right_clmn">
  <%= render 'shared/mini_slider' %>

  <div class="city_content">

    <div class="city_text">
      <%= link_to "Купить недвижимость в #{@city.name_case}", buy_search_path(city_id: [@city.id]), class: 'order_link' %>
      <%= link_to "Арендовать жилье в #{@city.name_case}", rent_search_path(city_id: [@city.id]), class: 'order_link' %>

      <div class="clear"></div>

      <%= raw @city.description %>
    </div>

    <% unless @city.photos.blank? %>
    <h1 class="h2">Фото <%= @city.name_case %></h1>
    <ul class="photo_list">
      <% @city.photos.each do |photo| %>
      <li class="li">
        <span class="img">
            <%= photo_tag photo.picture, style: :thumb2 %>
        </span>
      </li>
      <% end %>
    </ul>
    <% end %>
  </div>
</div>

<%= link_to_unless_current "Карта сейсмоактивности Турции", TurkeyNews.get_seismic_map, class: 'earthquake_map' do |name| %>
  <span class="earthquake_map act">Карта сейсмоактивности Турции</span>
<% end %>
<%= render 'shared/tour' %>
<div class="clear"></div>
